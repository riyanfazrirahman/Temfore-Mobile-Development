<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemporeApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Font family -->
        <item name="android:fontFamily">@font/poppins</item>

    </style>

    <style name="Theme.BottomNavigation" parent="Theme.TemporeApp" />

    <color name="inputAuth">@color/black_300</color> <!-- Warna gelap -->

    <style name="bottomAuth">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black_300</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomBottomNavigation">
        <item name="android:background">@color/black_600</item>
        <item name="itemTextColor">@color/orange</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange_300</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.TemporeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <color name="colWhiteBlack">@color/white</color>

</resources>